<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reservation_doctor_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nju.android.health.views.activities.next.Reservation.ReservationDoctorListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="96dp"
        android:layout_marginRight="96dp" >

        <TextView
            android:id="@+id/reservation_doctor_list_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_corner_left"
            android:text="按医生"
            android:padding="8dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/reservation_doctor_list_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_corner_right"
            android:text="按日期"
            android:padding="8dp"
            android:textSize="16sp"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/container_reservation_doctor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>




</LinearLayout>

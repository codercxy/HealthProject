<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00bfff" >

            <Button android:id="@+id/back"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="#0099FF"
                android:text=" "
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" />"

            <TextView
                android:id="@+id/title"
                android:layout_width="400dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_toLeftOf="@+id/sure"
                android:layout_toRightOf="@id/back"
                android:background="#0099FF"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="用户监测"
                android:textSize="20sp" />

            <Button
                android:id="@+id/sure"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="#0099FF"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text=" "
                android:textColor="#ffffff"
                android:textSize="15sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="12dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text=" "
            android:textSize="23sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:text="时间:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/pretime"
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:layout_alignBaseline="@+id/time"
                android:layout_alignBottom="@+id/time"
                android:layout_centerVertical="true"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/time"
                android:gravity="right"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/datetimepicker"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/pretime"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_chevron_right_grey600_24dp"
                android:layout_marginTop="3dp"
                android:textSize="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:text="高压:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/prehigh"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/high"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:layout_marginTop="5dp"
                android:text="145"
                android:textSize="18sp"
                android:background="#fff" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/high"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="mmHg"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:text="低压:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/prelow"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/textView4"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:layout_marginTop="3dp"
                android:text="95"
                android:textSize="18sp"
                android:background="#fff" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/textView4"
                android:gravity="center"
                android:text="mmHg"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:text="心率:"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/heartrate"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/textView6"
                android:layout_centerVertical="true"
                android:ems="10"
                android:gravity="right"
                android:layout_marginTop="3dp"
                android:text="95"
                android:textSize="18sp"
                android:background="#fff" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/textView6"
                android:gravity="center"
                android:text="次/分"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:text="添加备注"
                android:textSize="18sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:background="#ffffff" >

            <EditText
                android:id="@+id/beizhu"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:hint="请输入内容"
                android:gravity="top"
                android:paddingLeft="15dp"
                android:textSize="18sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="#fff"  />

        </RelativeLayout>


        <Button
            android:id="@+id/save"
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:text="提交"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:background="#00bfff" />

    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search_result_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nju.android.health.views.activities.next.SearchResultDetailActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="疾病解释："
                android:drawableLeft="@drawable/explain"
                android:textSize="16sp"
                android:padding="16dp" />

            <TextView
                android:id="@+id/search_result_detail_explain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/aliwx_black"
                android:text="疾病解释"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/view" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="病因："
                android:drawableLeft="@drawable/reason"
                android:textSize="16sp"
                android:padding="16dp" />

            <TextView
                android:id="@+id/search_result_detail_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/aliwx_black"
                android:text="疾病原因"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/view" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="健康建议："
                android:drawableLeft="@drawable/suggestion"
                android:textSize="16sp"
                android:padding="16dp" />
            <TextView
                android:id="@+id/search_result_detail_suggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/aliwx_black"
                android:text="健康建议"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>

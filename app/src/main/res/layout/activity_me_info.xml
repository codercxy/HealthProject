<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_me_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.nju.android.health.views.activities.me.MeInfoActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:orientation="vertical"
        >
        <com.nju.android.health.utils.CircleImg
            android:id="@+id/me_info_circleimg"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:src="@drawable/head" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/username"
            android:textSize="16sp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@null"
            android:id="@+id/me_info_username" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="8dp"
            android:background="#f5f5f5" />
        <!--姓名-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="14sp"
                android:text="真实姓名："/>

            <EditText
                android:id="@+id/me_info_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="14sp"
                android:background="@null"
                />
        </LinearLayout>



        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#f5f5f5" />
        <!--手机号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="14sp"
                android:text="手机号："
                android:id="@+id/textView10" />

            <EditText
                android:id="@+id/me_info_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="14dp"
                android:background="@null"
                android:inputType="phone"
                android:maxLength="13"
                />
        </LinearLayout>


    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_me_info"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#00CCCC"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:gravity="center"
            android:text="个人信息"
            android:paddingLeft="32dp"
            android:textColor="#fff"/>



    </android.support.v7.widget.Toolbar>


</FrameLayout>
